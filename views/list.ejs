                    <button class="rm" type="submit" name="remove" value=<%= iteamArray[i].id %>    >-</button>
                </form></div>
            </div>
            <% } %>


            <form  class="item entr" action="/" method="post">
                <input type="text" name="newItm" placeholder="Add  a New Iteam" autocomplete="off" required>
